{
  "name": "churchtools-facts-reporter",
  "version": "0.1.0",
  "author": "Philipp Trenz",
  "description": "This app provides an easy way to report facts about events in ChurchTools",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/philipptrenz/ChurchTools-Facts-Reporter.git"
  },
  "os": [
    "win32",
    "darwin",
    "linux"
  ],
  "keywords": [
    "ChurchTools",
    "facts",
    "reporting"
  ],
  "build": {
    "appId": "com.philipptrenz.ctfactsreporter",
    "asar": true,
    "files": [],
    "win": {
      "target": "portable"
    },
    "portable": {
      "unicode": false,
      "artifactName": "ChurchToolsFactsReporter.exe"
    }
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -mwl"
  },
  "dependencies": {
    "electron-json-storage": "^4.1.6",
    "jquery": "^3.4.1",
    "keytar": "^4.6.0",
    "materialize-css": "^1.0.0",
    "moment": "^2.24.0",
    "prebuild-install": "^6.1.2",
    "q": "^1.4.1",
    "restler": "^3.4.0",
    "underscore": "^1.8.3",
    "winston": "^2.3.1",
    "y18n": "4.0.1"
  },
  "devDependencies": {
    "electron": "^5.0.0",
    "electron-builder": "^20.40.2"
  },
  "resolutions": {
    "node-abi": "^2.26.0"
  }
}
